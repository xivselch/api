---
import Layout from "~/lib/components/layout.astro";
import { Button } from "~/lib/components/ui/button";
import Logo from "~/assets/logo.svelte";
import { Badge } from "~/lib/components/ui/badge";
import { ArrowUpRight, Gamepad2, Users, BookOpen, Zap, ArrowDown } from "@lucide/svelte";
import { version as packageVersion } from "../../package.json";
---

<Layout>
  <section class="container flex max-w-screen-lg w-full mx-auto px-4 h-[calc(100vh-14rem)]">
    <div class="flex flex-col text-center justify-center items-center mx-auto">
      <div class="flex items-baseline gap-2 select-none mx-auto">
        <div>
          <Logo
            class="relative size-12 lg:size-14 mx-auto z-10 -translate-x-20 translate-y-6.5 lg:-translate-x-26.5 lg:translate-y-8"
          />
          <h1 class="text-4xl lg:text-5xl font-semibold mb-8 leading-tight">
            api.<b>emetselch<span class="text-red-600">.</span></b>
          </h1>
        </div>
        <Badge variant="secondary" class="relative -top-1">v{packageVersion}</Badge>
      </div>
      <p class="text-lg lg:text-xl text-muted-foreground mb-12 leading-relaxed max-w-xl mx-auto">
        A powerful RESTful API for Final Fantasy XIV data, character management, and community
        features.
      </p>
      <div class="flex gap-2 justify-center items-center select-none">
        <Button href="/docs" size="lg" class="font-semibold" draggable="false">
          <BookOpen />
          View Documentation
        </Button>
        <Button
          href="https://emetselch.xyz/"
          size="lg"
          class="font-semibold"
          variant="outline"
          draggable="false"
        >
          Visit Platform (soon)
          <ArrowUpRight />
        </Button>
      </div>
    </div>
  </section>
  <section class="container flex max-w-screen-lg w-full mx-auto px-4 h-[calc(100vh-14rem)]">
    <div class="flex flex-col text-center justify-center items-center mx-auto">
      <h2 class="text-2xl lg:text-3xl font-bold text-foreground mb-4">Everything you need</h2>
      <p class="text-base lg:text-lg text-muted-foreground max-w-2xl mx-auto">
        Unlock a world of FFXIV knowledge and features—intuitive RESTful APIs for every need.
        Explore game data, manage characters, and engage with community tools—all with a single,
        powerful API.
      </p>
      <div class="container max-w-screen-md w-full mx-auto px-4 mt-12">
        <div class="grid grid-flow-dense md:grid-cols-2 gap-8 mb-16 w-full">
          <div class="text-center bg-card/15 p-4 rounded-lg border border-border/50 w-full">
            <div
              class="w-12 h-12 bg-gradient-to-br from-red-500/20 to-red-600/10 rounded-lg flex items-center justify-center mx-auto mb-4 border border-red-500/30"
            >
              <Gamepad2 class="h-6 w-6 text-red-400" />
            </div>
            <h3 class="text-lg lg:text-xl font-semibold text-foreground mb-2">Game Data</h3>
            <p class="text-base lg:text-md text-muted-foreground">
              Access game data such as roulette rewards, allied societies (formally beast tribes),
              and delivery systems.
            </p>
          </div>
          <div class="text-center bg-card/15 p-4 rounded-lg border border-border/50 w-full">
            <div
              class="w-12 h-12 bg-gradient-to-br from-yellow-500/20 to-yellow-600/10 rounded-lg flex items-center justify-center mx-auto mb-4 border border-yellow-500/30"
            >
              <Users class="h-6 w-6 text-yellow-400" />
            </div>
            <h3 class="text-lg lg:text-xl font-semibold text-foreground mb-2">
              Collection Progression
            </h3>
            <p class="text-base lg:text-md text-muted-foreground">
              Manage your collection progression with ease, including profiles and stats.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
